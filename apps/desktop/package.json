{
  "name": "@ledgr/desktop",
  "version": "1.0.4",
  "private": true,
  "description": "Privacy-focused desktop application for budget tracking and forecasting",
  "main": "dist/main/main/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron . --dev",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "tsc && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:msi": "node scripts/build-msi.js",
    "start": "electron .",
    "test": "jest",
    "seed": "tsc -p tsconfig.main.json && electron --no-sandbox dist/main/scripts/seed-dev-data.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "keywords": [
    "budget",
    "finance",
    "electron",
    "privacy"
  ],
  "author": "Johnathen Chilcher (TechLoom)",
  "license": "AGPL-3.0-only",
  "homepage": "https://github.com/jchilcher/ledgr-desktop",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/d3-sankey": "^0.12.5",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^26.7.0",
    "electron-wix-msi": "^5.1.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.0"
  },
  "dependencies": {
    "@ledgr/core": "*",
    "@ledgr/db": "*",
    "@tanstack/react-query": "^5.90.20",
    "better-sqlite3": "^9.2.2",
    "chart.js": "^4.4.1",
    "d3-sankey": "^0.12.3",
    "date-fns": "^4.1.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.7.3",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-grid-layout": "^1.5.0",
    "recharts": "^3.6.0",
    "uuid": "^13.0.0"
  }
}
